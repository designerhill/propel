# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force non-www (www.propel.plus -> propel.plus)
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Redirect homepage variations to root
RewriteCond %{THE_REQUEST} /(index\.html?|home)(\?.*)?\s [NC]
RewriteRule ^(index\.html?|home)$ https://propel.plus/ [R=301,L]